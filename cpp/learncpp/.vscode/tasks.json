{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/usr/bin/clang++",
      "args": [
        "-fdiagnostics-color=always",
        "-Wall",
        "-g",
        "${file}",
        "${fileDirname}/src/*.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-I",
        "${fileDirname}/plog/include"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}